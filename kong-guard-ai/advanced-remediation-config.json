{
  "name": "kong-guard-ai",
  "config": {
    "comment": "Kong Guard AI with Advanced Remediation - Production Configuration",
    
    "basic_security": {
      "dry_run_mode": false,
      "threat_threshold": 7.5,
      "max_processing_time_ms": 8
    },
    
    "threat_detection": {
      "enable_rate_limiting_detection": true,
      "rate_limit_threshold": 120,
      "enable_ip_reputation": true,
      "enable_payload_analysis": true,
      "enable_path_filtering": true,
      "enable_method_filtering": true
    },
    
    "advanced_remediation": {
      "enable_advanced_remediation": true,
      "enable_5xx_correlation": true,
      "config_correlation_window": 43200,
      "error_correlation_threshold": 0.12,
      "remediation_confidence_threshold": 0.82,
      
      "rollback_configuration": {
        "enable_automatic_rollback": false,
        "rollback_confidence_threshold": 0.92,
        "enable_rollback_dry_run": true,
        "emergency_rollback_enabled": false,
        "emergency_error_threshold": 0.45
      },
      
      "traffic_management": {
        "enable_traffic_rerouting": true,
        "default_reroute_strategy": "gradual",
        "gradual_shift_duration": 420,
        "circuit_breaker_enabled": true,
        "circuit_breaker_failure_threshold": 8,
        "circuit_breaker_recovery_timeout": 90
      },
      
      "snapshot_management": {
        "enable_periodic_snapshots": true,
        "snapshot_interval_seconds": 1800,
        "max_snapshots_retained": 336,
        "backup_retention_days": 14
      },
      
      "operational_settings": {
        "remediation_timeout_seconds": 240,
        "enable_remediation_validation": true,
        "validation_timeout_seconds": 45,
        "enable_remediation_notifications": true,
        "remediation_notification_channels": ["slack", "webhook"]
      }
    },
    
    "kong_integration": {
      "kong_admin_url": "http://localhost:8001",
      "enable_deck_integration": true,
      "deck_config_format": "yaml",
      "admin_api_timeout_ms": 4000
    },
    
    "notifications": {
      "enable_notifications": true,
      "notification_threshold": 6.5,
      "slack_webhook_url": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
      "webhook_urls": ["https://your-monitoring-system.com/kong-guard-ai/alerts"]
    },
    
    "logging": {
      "structured_logging_enabled": true,
      "async_logging": true,
      "log_level": "info",
      "external_logging_enabled": false
    },
    
    "analytics": {
      "analytics_dashboard_enabled": true,
      "enable_threat_intelligence": true,
      "enable_predictive_analytics": true,
      "enable_anomaly_detection": true,
      "analytics_data_retention_days": 45
    },
    
    "incident_management": {
      "incident_analytics_enabled": true,
      "incident_alerting_enabled": true,
      "incident_retention_days": 60,
      "alert_notification_channels": ["slack", "webhook"]
    }
  },
  "deployment_notes": {
    "security_level": "ENTERPRISE_PRODUCTION",
    "risk_profile": "MEDIUM_RISK_WITH_SAFEGUARDS",
    "rollout_strategy": "GRADUAL_ENABLEMENT",
    "validation_required": [
      "Test in staging environment with realistic traffic",
      "Validate decK integration and snapshot creation", 
      "Verify Kong Admin API connectivity and permissions",
      "Configure backup upstream/service targets",
      "Test dry-run rollback procedures",
      "Set up monitoring and alerting endpoints",
      "Train operations team on emergency procedures"
    ],
    "operational_checklist": [
      "Monitor correlation accuracy for 1 week before enabling automatic actions",
      "Adjust confidence thresholds based on false positive rates",
      "Establish runbook procedures for manual overrides",
      "Configure backup services/upstreams for traffic rerouting",
      "Set up proper RBAC for Kong Admin API access",
      "Implement snapshot storage backup and rotation",
      "Document incident response procedures"
    ]
  }
}