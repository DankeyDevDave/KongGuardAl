# Kong Guard AI - Hackathon Preparation Configuration
# This file stores your preferences for the hackathon prep menu

# Demo Recording Settings
DEMO_MODE="headed"                      # Options: headed, headless
VIDEO_ENABLED="true"                    # Options: true, false
SCREENSHOTS_ENABLED="true"              # Options: true, false
NARRATOR_TIMING="true"                  # Options: true, false

# Dashboard Settings
DASHBOARD_URL="http://localhost:8080"   # URL for dashboard
DASHBOARD_LOCAL_PATH="visualization/index.html"  # Local fallback

# Docker Settings
DOCKER_COMPOSE_FILE="config/docker/docker-compose-presentation.yml"
DOCKER_COMPOSE_FALLBACK="docker-compose.yml"

# Output Settings
OUTPUT_DIR="demo_recordings"            # Where recordings are saved
SCREENSHOTS_DIR="screenshots"           # Screenshots subdirectory

# Video Conversion Settings
VIDEO_QUALITY="high"                    # Options: high, medium, low
FFMPEG_PRESET="slow"                    # Options: slow, medium, fast, ultrafast
FFMPEG_CRF="18"                         # Quality: 18=high, 23=medium, 28=low
VIDEO_CODEC="libx264"                   # Video codec
AUDIO_CODEC="aac"                       # Audio codec

# Cleanup Settings
AUTO_CLEANUP_DAYS=7                     # Keep recordings for X days (0=never)
KEEP_LAST_N_RECORDINGS=3                # Always keep N most recent

# Service Settings
SERVICE_STARTUP_WAIT=30                 # Seconds to wait for services
HEALTH_CHECK_RETRIES=3                  # Retries for health checks
HEALTH_CHECK_INTERVAL=5                 # Seconds between retries

# Display Settings
USE_COLORS="true"                       # Enable colored output
SHOW_PROGRESS="true"                    # Show progress indicators
VERBOSE_MODE="false"                    # Show detailed output

# Advanced Settings
PYTHON_CMD="python3"                    # Python command
PLAYWRIGHT_BROWSERS="chromium"          # Browser to use
RECORDING_TIMEOUT=600                   # Max recording time in seconds (10 min)

# Paths (relative to project root)
RECORDER_SCRIPT="hackathon_demo_recorder.py"
TIMING_CONFIG="narrator_timing.json"
VISUAL_EFFECTS="demo_visual_effects.js"

# Notification Settings
ENABLE_NOTIFICATIONS="false"            # Desktop notifications (requires terminal-notifier or notify-send)
SOUND_ENABLED="false"                   # Play sound on completion
