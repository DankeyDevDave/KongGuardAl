FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-ollama.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-ollama.txt

# Copy application
COPY ollama_service.py .
COPY ollama-models.conf .

# Create non-root user
RUN useradd -m -u 1001 ollama-service
USER ollama-service

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:18003/health || exit 1

EXPOSE 18003

CMD ["python", "ollama_service.py"]
