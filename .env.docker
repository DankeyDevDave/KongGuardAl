# Docker Environment Configuration for Kong Guard AI

# Kong User (for file permissions)
KONG_USER=kong

# Database Configuration
POSTGRES_USER=kong
POSTGRES_PASSWORD=kongpass
POSTGRES_DB=kong

# Kong Configuration
KONG_DATABASE=postgres
KONG_PG_HOST=kong-database
KONG_PG_PORT=5432
KONG_PG_USER=kong
KONG_PG_PASSWORD=kongpass
KONG_PG_DATABASE=kong

# Plugin Configuration
KONG_PLUGINS=bundled,kong-guard-ai
KONG_LUA_PACKAGE_PATH=/usr/local/share/lua/5.1/kong/plugins/custom/?.lua;;

# Logging
KONG_LOG_LEVEL=debug
KONG_PROXY_ACCESS_LOG=/dev/stdout
KONG_ADMIN_ACCESS_LOG=/dev/stdout
KONG_PROXY_ERROR_LOG=/dev/stderr
KONG_ADMIN_ERROR_LOG=/dev/stderr

# Network Configuration
KONG_PROXY_LISTEN=0.0.0.0:8000, 0.0.0.0:8443 ssl
KONG_ADMIN_LISTEN=0.0.0.0:8001, 0.0.0.0:8444 ssl

# AI and External Service Configuration (for future use)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# SLACK_WEBHOOK_URL=your_slack_webhook_url_here
# EMAIL_SMTP_HOST=your_smtp_host_here
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email_username_here
# EMAIL_PASSWORD=your_email_password_here

# Plugin Development Settings
KONG_GUARD_AI_DRY_RUN=false
KONG_GUARD_AI_DEBUG=true
KONG_GUARD_AI_REDIS_HOST=redis
KONG_GUARD_AI_REDIS_PORT=6379

# Demo API Configuration
DEMO_API_HOST=demo-api
DEMO_API_PORT=80

# Mock Attacker Configuration
MOCK_ATTACKER_HOST=mock-attacker
MOCK_ATTACKER_PORT=80
